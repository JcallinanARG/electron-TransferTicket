{
  "name": "electron-transfer",
  "productName": "Electron Transfer",
  "description": "Application for ARG Transfer Tickets",
  "version": "1.1.0",
  "main": "main.js",
  "license": "MIT",
  "author": "American Refining Group",
  "dependencies": {
    "autocompleter": "^9.1.2",
    "axios": "^0.27.2",
    "downloadjs": "^1.4.7",
    "electron-context-menu": "^3.5.0",
    "electron-dialogs": "^1.4.0",
    "electron-installer-dmg": "^4.0.0",
    "electron-packager": "^16.0.0",
    "electron-winstaller": "^5.0.0",
    "jquery": "^3.7.1",
    "pdf-to-printer": "^5.3.0",
    "update-electron-app": "^2.0.1"
  },
  "devDependencies": {
    "electron": "^20.1.3",
    "electron-builder": "^23.5.1",
    "electron-context-menu": "^3.5.0",
    "electron-installer-dmg": "^4.0.0",
    "electron-packager": "^16.0.0",
    "electron-winstaller": "^5.0.0",
    "jquery": "^3.7.1"
  },
  "scripts": {
    "package-mac": "electron-packager . --overwrite --asar --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds --darwinDarkModeSupport=true",
    "package-win": "electron-packager . ARG-TransferTicket-app --overwrite --asar --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"ARG Transfer Tickets\" --extra-resource=./extraResources",
    "package-linux": "electron-packager . electron-tutorial-app --overwrite --asar --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",
    "create-installer-mac": "electron-installer-dmg ./release-builds/Electron\\ tutorial\\ app-darwin-x64/Electron\\ tutorial\\ app.app electron-tutorial-app --out=release-builds --overwrite --icon=assets/icons/mac/icon.icns",
    "create-installer-win": "node installers/windows/createinstaller.js",
    "create-debian-installer": "electron-installer-debian --src release-builds/electron-tutorial-app-linux-x64/ --arch amd64 --config debian.json"
  },
  "build": {
    "appId": "com.AmericanRefiningGroup.TransferTicket",
    "asar": true,
    "icon": "assets/icons/win/icon.ico",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "msi"
      
     
    },
    "msi": {
      "perMachine": true,
      "createStartMenuShortcut": true,
      "createDesktopShortcut": true
    }
  }
}
